<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ngang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ngang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ NHÂN SỰ"
        android:textColor="#4bae4f"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt2"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPOLY SOFTWAVE COMPANY"
        android:textColor="#ff5722"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ngang1"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnphongban"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/ic_ph_ban"
        android:drawablePadding="0dp"
        android:text="Phòng ban"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:strokeWidth="2dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/doc"
        app:layout_constraintTop_toTopOf="@id/ngang1"
        app:layout_constraintBottom_toBottomOf="@id/ngang2"/>

    <Button
        android:id="@+id/btnnv"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/ic_nv"
        android:drawablePadding="0dp"
        android:text="Nhân viên"
        android:textColor="#0051FF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:strokeWidth="2dip"
        app:layout_constraintStart_toStartOf="@id/doc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ngang1"
        app:layout_constraintBottom_toBottomOf="@id/ngang2"/>

    <Button
        android:id="@+id/btnback"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/ic_back"
        android:drawablePadding="0dp"
        android:text="Thoát"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:strokeWidth="2dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ngang2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>